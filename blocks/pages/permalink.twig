{% extends '@blocks/layouts/main.twig' %}

{% block body_class %}left-sidebar{% endblock %}

{% block featuredcontent %}{% endblock featuredcontent %}

{% block main %}

	<!-- Main -->
	<div id="main-wrapper">
		<div class="container">
			<div class="row 200%">
				<div class="4u">
					<div id="sidebar">

						<!-- Sidebar -->
						<section>
							<h3>{{ post.contributor.byline }}</h3>
							<p>{{ post.published|date('M j, Y') }}</p>
							<footer>
								<a href="#" class="button icon fa-info-circle">Find out more</a>
							</footer>
						</section>

						{% if vars.special_event %}
							<div id="special-event">
								Special Event
							</div>
						{% endif %}

						<section>
							<h3>Subheading</h3>
							<ul class="style2">
								<li><a href="#">Amet turpis, feugiat et sit amet</a></li>
								<li><a href="#">Ornare in hendrerit in lectus</a></li>
								<li><a href="#">Semper mod quis eget mi dolore</a></li>
								<li><a href="#">Quam turpis feugiat sit dolor</a></li>
								<li><a href="#">Amet ornare in hendrerit in lectus</a></li>
								<li><a href="#">Semper mod quisturpis nisi</a></li>
							</ul>
						</section>

					</div>
				</div>
				<div class="8u important(collapse)">
					<div id="content">

						<!-- Content -->
						<article>

							<h2>{{ post.title|raw }}</h2>

							<div>
								{{
									post.contents|out({
										'Slideshow': '@blocks/pages/permalink-inline-slideshow.twig'
									})|raw
								}}
							</div>

							<div>
								{{
									post.continued_contents|out({
										'Slideshow': '@blocks/pages/permalink-inline-slideshow.twig'
									})|raw
								}}
							</div>

						</article>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
