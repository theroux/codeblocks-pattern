{% extends '@blocks/layouts/main.twig' %}

{% block body_class %}homepage{% endblock %}

{% block featuredcontent %}
	{% block featuredcontent %}
	{%
		set homeZone = api.posts.query({
			zone: 'Home Page Featured Content Zone'
			limit: 1
		})

	%}

	{% for topContent in homeZone.results %}
		{% set featured_image = topContent.template_data.some_custom_image_field %}
		{% set featured_content_heading = topContent.template_data.some_custom_title_field %}
		{% set featured_content_teaser_description = topContent.template_data.some_custom_description_field %}
		{% set featured_content_permalink = topContent.template_data.some_custom_url_field %}

		{% include '@blocks/modules/featuredcontent.twig' %}
	{% endfor %}


	
{% endblock featuredcontent %}
{% endblock featuredcontent %}

