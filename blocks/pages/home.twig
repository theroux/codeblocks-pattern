						<a href="#" class="image featured first">
							<img src="{{ post.image }}" />
						</a>
					</div>
					<header>
						<h2>{{ post.title|raw }}</h2>
					</header>
					<p>{{ post.contents|regex_replace('~<img[^>]+>~', '')|raw }}</p>
					<ul class="actions">
						<li><a href="{{ post.relative_path }}" class="button">Elevate my awareness</a></li>
